<p id="notice"><%= notice %></p>

<h1>Listing My Infos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_infos.each do |my_info| %>
      <tr>
        <td><%= link_to 'Show', my_info %></td>
        <td><%= link_to 'Edit', edit_my_info_path(my_info) %></td>
        <td><%= link_to 'Destroy', my_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My info', new_my_info_path %>
