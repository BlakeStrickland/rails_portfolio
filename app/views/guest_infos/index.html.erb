<p id="notice"><%= notice %></p>

<h1>Listing Guest Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_infos.each do |guest_info| %>
      <tr>
        <td><%= guest_info.name %></td>
        <td><%= guest_info.email %></td>
        <td><%= guest_info.phone_number %></td>
        <td><%= guest_info.company %></td>
        <td><%= link_to 'Show', guest_info %></td>
        <td><%= link_to 'Edit', edit_guest_info_path(guest_info) %></td>
        <td><%= link_to 'Destroy', guest_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

